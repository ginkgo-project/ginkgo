set(GINKGO_BUILD_CUDA @GINKGO_BUILD_CUDA@)
set(GINKGO_BUILD_HIP @GINKGO_BUILD_HIP@)
set(GINKGO_BUILD_MPI @GINKGO_BUILD_MPI@)
set(GINKGO_BUILD_DPCPP @GINKGO_BUILD_DPCPP@)

set(GINKGO_DEVEL_TOOLS @GINKGO_DEVEL_TOOLS@)
