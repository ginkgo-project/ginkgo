{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/ginkgo/operators",
  "title": "Operators",
  "desciption": "something",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "filename": {
        "type": "string"
      },
      "stencil": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "size": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "process_grid": {
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
              "type": "number",
              "exclusiveMinimum": 0
            }
          }
        },
        "required": [
          "name",
          "size"
        ]
      }
    },
    "additionalProperties": false,
    "oneOf": [
      {
        "required": [
          "filename"
        ]
      },
      {
        "required": [
          "stencil"
        ]
      }
    ]
  }
}
