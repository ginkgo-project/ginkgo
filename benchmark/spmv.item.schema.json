{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/ginkgo/spmv",
  "title": "SpMV",
  "desciption": "something",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "operator": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string"
          },
          "stencil": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "local_size": {
                "type": "number",
                "exclusiveMinimum": 0
              },
              "process_grid": {
                "type": "array",
                "minItems": 3,
                "maxItems": 3,
                "items": {
                  "type": "number",
                  "exclusiveMinimum": 0
                }
              }
            }
          }
        },
        "oneOf": [
          {
            "required": [
              "filename"
            ]
          },
          {
            "required": [
              "stencil"
            ]
          }
        ]
      },
      "format": {
        "type": "string"
      }
    }
  }
}
