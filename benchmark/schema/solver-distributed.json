{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Solver",
  "desciption": "something",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "operator": {
        "$ref": "operator-distributed.json"
      },
      "solver": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "solver::Cg",
              "solver::Fcg",
              "solver::Cgs",
              "solver::Bicgstab",
              "solver::Gmres",
              "solver::Multigrid"
            ]
          }
        },
        "not": {
          "required": [
            "criteria"
          ]
        }
      },
      "optimal": {
        "type": "object",
        "properties": {
          "spmv": {
            "$ref": "spmv-distributed.reuse.json"
          }
        },
        "required": [
          "spmv"
        ]
      }
    },
    "required": [
      "operator",
      "solver",
      "optimal"
    ]
  }
}
