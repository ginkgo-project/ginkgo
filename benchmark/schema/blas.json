{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BLAS",
  "description": "Input for a single BLAS operation",
  "type": "object",
  "properties": {
    "n": {
      "type": "integer",
      "minimum": 1
    },
    "operation": {
      "enum": [
        "copy",
        "axpy",
        "sub_scaled",
        "multiaxpy",
        "scal",
        "multiscal",
        "dot",
        "norm",
        "mm",
        "gemm",
        "prefix_sum32",
        "prefix_sum64"
      ]
    },
    "r": {
      "type": "integer",
      "minimum": 1
    },
    "m": {
      "type": "integer",
      "minimum": 1
    },
    "k": {
      "type": "integer",
      "minimum": 1
    },
    "stride": {
      "type": "integer",
      "minimum": 1
    },
    "stride_x": {
      "type": "integer",
      "minimum": 1
    },
    "stride_y": {
      "type": "integer",
      "minimum": 1
    },
    "stride_A": {
      "type": "integer",
      "minimum": 1
    },
    "stride_B": {
      "type": "integer",
      "minimum": 1
    },
    "stride_C": {
      "type": "integer",
      "minimum": 1
    }
  },
  "if": {
    "required": [
      "stride"
    ]
  },
  "then": {
    "not": {
      "anyOf": [
        {
          "required": [
            "stride_x"
          ]
        },
        {
          "required": [
            "stride_y"
          ]
        }
      ]
    }
  },
  "required": [
    "n",
    "operation"
  ],
  "examples": [
    {
      "n": 1000,
      "operation": "axpy"
    },
    {
      "n": 1000,
      "operation": "dot"
    },
    {
      "n": 1000,
      "r": 1000,
      "m": 1000,
      "k": 1000,
      "operation": "copy"
    },
    {
      "n": 1000,
      "stride": 1024,
      "operation": "scal"
    },
    {
      "n": 1000,
      "stride_x": 1024,
      "stride_y": 2048,
      "operation": "multiscal"
    }
  ]
}
