{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Conversion",
  "description": "Input for a single conversion operation",
  "type": "object",
  "properties": {
    "operator": {
      "$ref": "operator.reuse.json"
    }
  },
  "required": [
    "operator"
  ],
  "not": {
    "required": [
      "format",
      "reorder"
    ]
  },
  "examples": [
    {
      "operator": {
        "filename": "my_file.mtx"
      }
    },
    {
      "operator": {
        "stencil": {
          "name": "5pt",
          "size": 100
        }
      }
    }
  ]
}
