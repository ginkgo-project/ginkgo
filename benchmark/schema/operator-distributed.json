{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "operator-distributed.json",
  "title": "Operator",
  "desciption": "something",
  "type": "object",
  "properties": {
    "filename": {
      "type": "string"
    },
    "stencil": {
      "type": "object",
      "properties": {
        "name": {
          "enum": [
            "5pt",
            "7pt",
            "9pt",
            "27pt"
          ]
        },
        "local_size": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "process_grid": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        }
      },
      "required": [
        "name",
        "local_size"
      ]
    }
  },
  "additionalProperties": false,
  "oneOf": [
    {
      "required": [
        "filename"
      ]
    },
    {
      "required": [
        "stencil"
      ]
    }
  ]
}
