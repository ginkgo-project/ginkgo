{
    "version": 4,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build-${presetName}"
        },
        {
            "name": "base-dev",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_COLOR_DIAGNOSTICS": "ON",
                "CMAKE_LINK_DEPENDS_NO_SHARED": "ON",
                "GINKGO_DEVEL_TOOLS": "ON",
                "GINKGO_MIXED_PRECISION": "ON",
                "GINKGO_BUILD_REFERENCE": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-${presetName}"
            },
            "warnings": {
                "dev": true,
                "deprecated": true
            }
        },
        {
            "name": "base-non-windows",
            "hidden": true,
            "generator": "Ninja",
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "base-dev-gcc-like",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "$env{CXXFLAGS} -g -fno-omit-frame-pointer -Wpedantic -Wall -Wextra -Wconversion -Wunused"
            },
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "dev",
            "inherits": [
                "base",
                "base-dev",
                "base-dev-gcc-like",
                "base-non-windows"
            ]
        },
        {
            "name": "dev-cpu",
            "inherits": [
                "base",
                "base-dev",
                "base-dev-gcc-like",
                "base-non-windows"
            ],
            "cacheVariables": {
                "GINKGO_BUILD_CUDA": "OFF",
                "GINKGO_BUILD_HIP": "OFF",
                "GINKGO_BUILD_SYCL": "OFF"
            }
        },
        {
            "name": "unity",
            "inherits": [
                "base",
                "base-dev",
                "base-dev-gcc-like",
                "base-non-windows"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "GINKGO_BUILD_OMP": "ON",
                "GINKGO_BUILD_CUDA": "ON",
                "GINKGO_BUILD_HIP": "ON",
                "GINKGO_BUILD_SYCL": "ON"
            },
            "environment": {
                "CXX": "icpx"
            }
        },
        {
            "name": "dev-clang",
            "inherits": [
                "base",
                "base-dev",
                "base-dev-gcc-like",
                "base-non-windows"
            ],
            "environment": {
                "CXX": "clang++"
            }
        },
        {
            "name": "dev-macos-clang",
            "inherits": [
                "base",
                "base-dev",
                "base-dev-gcc-like",
                "base-non-windows"
            ],
            "cacheVariables": {
                "GINKGO_BUILD_OMP": "ON",
                "OpenMP_CXX_INCLUDE_DIR": "/opt/homebrew/opt/libomp/include",
                "OpenMP_CXX_FLAGS": "-fopenmp",
                "OpenMP_CXX_LIB_NAMES": "omp",
                "OpenMP_omp_LIBRARY": "/opt/homebrew/opt/libomp/lib/libomp.dylib"
            },
            "environment": {
                "CXX": "clang++"
            }
        },
        {
            "name": "release",
            "inherits": [
                "base",
                "base-non-windows"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "dev-win",
            "inherits": [
                "base",
                "base-dev"
            ],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "$env{CXXFLAGS} /permissive- /Oy-"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev"
        },
        {
            "name": "dev-cpu",
            "configurePreset": "dev-cpu"
        },
        {
            "name": "unity",
            "configurePreset": "unity"
        },
        {
            "name": "dev-clang",
            "configurePreset": "dev-clang"
        },
        {
            "name": "dev-macos-clang",
            "configurePreset": "dev-macos-clang"
        },
        {
            "name": "release",
            "configurePreset": "release"
        }
    ]
}
