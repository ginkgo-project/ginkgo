FROM nvidia/cuda:9.0-devel-ubuntu16.04 AS stage0

# Python
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        python \
        python3 && \
    rm -rf /var/lib/apt/lists/*

# CMake version 3.11.1
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        wget && \
    rm -rf /var/lib/apt/lists/*
RUN mkdir -p /var/tmp && wget -q -nc --no-check-certificate -P /var/tmp https://cmake.org/files/v3.11/cmake-3.11.1-Linux-x86_64.sh && \
    /bin/sh /var/tmp/cmake-3.11.1-Linux-x86_64.sh --prefix=/usr/local --skip-license && \
    rm -rf /var/tmp/cmake-3.11.1-Linux-x86_64.sh

RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        git \
        openssh-client \
        doxygen \
        curl \
        valgrind && \
    rm -rf /var/lib/apt/lists/*

# GNU compiler
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends software-properties-common && \
    apt-add-repository ppa:ubuntu-toolchain-r/test -y && \
    apt-get update -y && \
    apt-get install -y --no-install-recommends \
        gcc-5 \
        g++-5 \
        gfortran-5 && \
    rm -rf /var/lib/apt/lists/*
RUN update-alternatives --install /usr/bin/gcc gcc $(which gcc-5) 30 && \
    update-alternatives --install /usr/bin/g++ g++ $(which g++-5) 30 && \
    update-alternatives --install /usr/bin/gfortran gfortran $(which gfortran-5) 30

# LLVM compiler
RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        clang-3.9 && \
    rm -rf /var/lib/apt/lists/*
RUN update-alternatives --install /usr/bin/clang clang $(which clang-3.9) 30 && \
    update-alternatives --install /usr/bin/clang++ clang++ $(which clang++-3.9) 30

RUN apt-get update -y && \
    apt-get install -y --no-install-recommends \
        libomp-dev && \
    rm -rf /var/lib/apt/lists/*

ENV LIBRARY_PATH=/usr/local/cuda/lib64/stubs

ENV LD_LIBRARY_PATH=/usr/local/cuda/lib64/stubs


